@model NALSTEST.Models.UserModel.UserLoginViewModel

@{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()
        <div class="navbar-buttons navbar-header pull-right" role="navigation" >
            <ul class="nav ace-nav">
                <li class="light-blue">
                    <a data-toggle="dropdown" href="#" class="dropdown-toggle"><span class="user-info"><i class="default-icon fa fa-user"></i> @Model.FullName</span>
                        
                        <span class="user-info"></span><i class="default-icon fa fa-caret-down"></i>
                        </a>
                   
                    <ul class="user-menu dropdown-menu-right dropdown-menu dropdown-yellow dropdown-caret dropdown-close">
                        @*<li><a href=""><i class="default-icon fa fa-user"></i>Profile</a></li>*@
                        <li><a href="@Url.Action("ChangePassword", "Account", new { id = Model.UserId })"><i class="default-icon fa fa-lock"></i>Đổi mật khẩu</a></li>
                        <li class="divider"></li>
                        <li><a href="#" onclick="popupLogout()"><i class="default-icon fa fa-power-off"></i >Đăng xuất</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    }
}

